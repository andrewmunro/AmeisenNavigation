{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2020",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"allowJs": true,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"paths": {
			"*": ["node_modules/*", "types/*"]
		},
		"types": [ "node"]
	},
}
